@model Cinema

@{
    ViewData["Title"] = "Delete cinema";
}
<link rel="stylesheet" href="~/css/delete.css" />
<div class="page-wrapper">
    <div class="delete">
        <h1 class="hover-zoom">Delete confirmation for @Model.Name</h1>


        <div class="form-group">
            <img class="zoom-img" id="LogoPreview" />
        </div>
        <div class="form-group hover-zoom">
            <label asp-for="Logo"></label>
            <input asp-for="Logo" readonly />
            <span asp-validation-for="Logo"></span>
        </div>
        <div class="form-group hover-zoom">
            <label asp-for="Name"></label>
            <input asp-for="Name" readonly />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group hover-zoom">
            <label asp-for="Address"></label>
            <input asp-for="Address" readonly />
            <span asp-validation-for="Address"></span>
        </div>

        <div class="form-group buttons">
            <a class="move-btn" asp-action="Index">back</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="sub move-btn" />
            </form>

        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
    <script src="~/js/main.js"></script>
}