@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<link rel="stylesheet" href="~/css/ChangePassword.css" />
<h2 class="page-title">Change Password</h2>

<form asp-action="ChangePassword" method="post" class="change-password-form">
    <div class="form-group">
        <label asp-for="OldPassword" class="form-label"></label>
        <input asp-for="OldPassword" class="form-control input-field" />
        <span asp-validation-for="OldPassword" class="validation-message"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control input-field" />
        <span asp-validation-for="NewPassword" class="validation-message"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control input-field" />
        <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
    </div>

    <button type="submit" class="btn submit-btn">Change Password</button>
</form>

@if (ViewBag.StatusMessage != null)
{
    <div class="status-message">@ViewBag.StatusMessage</div>
}
