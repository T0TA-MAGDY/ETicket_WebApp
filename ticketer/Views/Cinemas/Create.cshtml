@model Cinema

@{
    ViewData["Title"] = "Add a new cinema";
}
<link rel="stylesheet" href="~/css/create.css" />
<div class="page-wrapper">
    <div class="create">
        <h1 class="hover-zoom">Add a New Cinema</h1>
        
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" ></div>

                    @* <div class="form-group text-center"> *@
                    @*     <img id="CinemaLogoPreview" class="border-info rounded-circle" style="max-width: 150px" /> *@
                    @* </div> *@
                    <div class="form-group hover-zoom">
                        <label asp-for="Logo" ></label>
                        <input asp-for="Logo" />
                        <span asp-validation-for="Logo"></span>
                    </div>
                    <div class="form-group hover-zoom">
                        <label asp-for="Name" ></label>
                        <input asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group hover-zoom">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" />
                        <span asp-validation-for="Address"></span>
                    </div>

                    <div class="form-group buttons">
                        <a class="move-btn" asp-action="Index">back</a>
                        <input type="submit" value="Create" class="sub move-btn" />

                    </div>
               </form>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        })
    </script>
    <script src="~/js/main.js"></script>
}