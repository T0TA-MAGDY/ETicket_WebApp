@model Producer

@{
    ViewData["Title"] = "Details of the producer";
}
<link rel="stylesheet" href="~/css/flipCard.css" />

<div class="page-wrapper">
    <!-- Flip Card Container -->
    <div class="card-wrapper">
        <div class="flip-card">
            <div class="flip-card-inner">

                <!-- Front Side -->
                <div class="flip-card-front">
                    <img src="@Model.ProfilePictureURL" alt="Profile Picture" class="profile-img-full" id="ProfilePicturePreview" />
                </div>

                <!-- Back Side -->
                <div class="flip-card-back">
                    

                    <div class="form-group hover-zoom">
                        <label asp-for="ProfilePictureURL"></label>
                        <input asp-for="ProfilePictureURL" readonly />
                        <span asp-validation-for="ProfilePictureURL"></span>
                    </div>

                    <div class="form-group hover-zoom">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" readonly />
                        <span asp-validation-for="FullName"></span>
                    </div>

                    <div class="form-group hover-zoom">
                        <label asp-for="Bio"></label>
                        <input asp-for="Bio" readonly />
                        <span asp-validation-for="Bio"></span>
                    </div>

                    <div class="form-group buttons">
                        <a class="move-btn" asp-action="Index">Back</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="move-btn" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- End Flip Card -->
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            if (output) {
                output.src = $("#ProfilePictureURL").val();
            }
        });
    </script>
    <script src="~/js/main.js"></script>
}
