@model Cinema

@{
    ViewData["Title"] = "Details of the cinema";
}
<link rel="stylesheet" href="~/css/details.css" />

<div class="page-wrapper">
    <div class="details">

        <h1>Details for @Model.Name</h1>

        <div class="form-group">
            <img id="LogoPreview" />
        </div>

        <div class="form-group">
            <label asp-for="Logo"></label>
            <input asp-for="Logo" readonly />
            <span asp-validation-for="Logo"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" readonly />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" readonly />
            <span asp-validation-for="Address"></span>
        </div>

        <div class="form-group buttons">
            <a asp-action="Index">back</a>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            }

        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}