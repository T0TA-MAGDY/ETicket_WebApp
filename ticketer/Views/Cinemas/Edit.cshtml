@model Cinema

@{
    ViewData["Title"] = "Update cinema";
}
<link rel="stylesheet" href="~/css/flipCard.css" />
<div class="page-wrapper">
    <!-- Flip Card Container -->
    <div class="card-wrapper">
        <div class="flip-card">
            <div class="flip-card-inner">

                <!-- Front Side -->
                <div class="flip-card-front">
                    <img src="@Model.Logo" alt="Cinema Logo" class="profile-img-full" id="CinemaLogoPreview" />
                </div>

                <!-- Back Side -->
                <div class="flip-card-back">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group hover-zoom">
                            <label asp-for="Logo"></label>
                            <input asp-for="Logo" id="Logo" />
                            <span asp-validation-for="Logo"></span>
                        </div>
                        <div class="form-group hover-zoom">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" />
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group hover-zoom">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" />
                            <span asp-validation-for="Address"></span>
                        </div>

                        <div class="form-group buttons">
                            <a class="move-btn" asp-action="Index">Back</a>
                            <input type="submit" value="Update" class="sub move-btn" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- End Flip Card -->
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            if (output) {
                output.src = $("#Logo").val();
            }
        });

        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            if (output) {
                output.src = $(this).val();
            }
        });
    </script>
    <script src="~/js/main.js"></script>
}
