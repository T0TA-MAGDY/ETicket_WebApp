@model Cinema

@{
    ViewData["Title"] = "Update cinema";
}
<link rel="stylesheet" href="~/css/edit.css" />
<div class="page-wrapper">
    <div class="edit">

        <h1 class="hover-zoom">Update cinema</h1>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <img class="zoom-img" id="CinemaLogoPreview" />
            </div>
            <div class="form-group hover-zoom">
                <label asp-for="Logo"></label>
                <input asp-for="Logo" />
                <span asp-validation-for="Logo"></span>
            </div>
            <div class="form-group hover-zoom">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group hover-zoom">
                <label asp-for="Address"></label>
                <input asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>

            <div class="form-group buttons">
                <a class="move-btn" asp-action="Index">back</a>
                <input type="submit" value="Update" class="sub move-btn" />

            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        })
    </script>
    <script src="~/js/main.js"></script>
}