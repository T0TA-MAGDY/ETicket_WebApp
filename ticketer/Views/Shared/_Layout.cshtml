<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticketer</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: #400000;">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Movie" asp-action="Index">Ticketer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center w-100">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item me-3">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="Index">
                                <i class="bi bi-film"></i> Movies
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>
                                <ul class="dropdown-menu" style="background-color:white;">
                                    <li>
                                        <a class="dropdown-item text-dark" asp-controller="Cinemas" asp-action="Index">
                                            <i class="bi bi-camera-reels"></i> Cinemas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-dark" asp-controller="Producers" asp-action="Index">
                                            <i class="bi bi-headset"></i> Producers
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-dark" asp-controller="Actors" asp-action="Index">
                                            <i class="bi bi-person-square"></i> Actors
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Search section -->
                    <div class="d-flex align-items-center ms-auto me-3 gap-2" style="max-width: 700px; width: 100%;">
                        <span class="navbar-text fw-semibold text-light" style="font-size: 1.1rem;">Movie Search</span>
                        <form asp-area="" asp-controller="Movie" asp-action="Index" method="get" class="d-flex flex-grow-1 search-form" role="search">
                            <input type="text" name="searchString" class="form-control me-2"
                                   placeholder="Search by name, cinema, or category..."
                                   aria-label="Search movies"
                                   value="@Context.Request.Query["searchString"]"
                                   style="font-size: 0.9rem;" />
                            <button class="btn btn-outline-light" type="submit" style="font-size: 0.9rem;">Search</button>
                        </form>
                    </div>

                    <!-- Identity section -->
                    <partial name="_Identity.cshtml" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.HideFooter == null || ViewBag.HideFooter == false)
    {
        <footer class="footer text-center text-muted mt-4">
            © 2025 eTickets
        </footer>
    }

    <!-- jQuery (optional) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap 5 JS bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
