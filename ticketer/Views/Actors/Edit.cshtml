@model Actor

@{
    ViewData["Title"] = "Update actor";
}
<link rel="stylesheet" href="~/css/edit.css" />
<div class="page-wrapper">
    <div class="edit">

        <h1 class="hover-zoom">Update Actor</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <img class="zoom-img" id="ProfilePicturePreview" />
            </div>
            <div class="form-group hover-zoom">
                <label asp-for="ProfilePictureURL"></label>
                <input asp-for="ProfilePictureURL" />
                <span asp-validation-for="ProfilePictureURL"></span>
            </div>
            <div class="form-group hover-zoom">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" />
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group hover-zoom">
                <label asp-for="Bio"></label>
                <input asp-for="Bio" />
                <span asp-validation-for="Bio"></span>
            </div>

            <div class="form-group buttons">
                <a class="move-btn" asp-action="Index">back</a>
                <input type="submit" value="Update" class="sub move-btn" />

            </div>
        </form>


    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
        
    </script>
    <script src="~/js/main.js"></script>
}