@model ticketer.ViewModels.PasswordResetEmailModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reset Your Password</title>
</head>
<body style="background-color:#000; background-image: url('https://yourdomain.com/img/cinema1.jpg'); background-size: cover; background-position: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #fff; margin: 0; padding: 0;">
    <div style="max-width:600px; margin: 0 auto; padding: 40px 20px; background-color: rgba(0,0,0,0.7); border-radius: 15px; box-shadow: 0 8px 16px rgba(0,0,0,0.5);">
        <h2 style="text-align:center; color:#fff;">Hello @Model.Name,</h2>
        <p style="font-size: 1.1rem; line-height: 1.5;">You recently requested to reset your password for your Ticketer account.</p>
        <p style="font-size: 1.1rem; line-height: 1.5;">Click the button below to reset it:</p>
        <p style="text-align:center; margin: 30px 0;">
            <a href="@Model.ResetLink" style="display:inline-block; padding: 12px 24px; background-color: #dc3545; color: #fff; text-decoration: none; border-radius: 8px; font-size: 1rem; font-weight: bold;">Reset Password</a>
        </p>
        <p style="font-size: 1rem; color: #ddd;">This link will expire soon. If you did not request a password reset, please ignore this email or contact support if you have questions.</p>
        <p style="font-size: 1rem; color: #bbb; margin-top: 40px;">– The Ticketer Team</p>
    </div>
</body>
</html>
