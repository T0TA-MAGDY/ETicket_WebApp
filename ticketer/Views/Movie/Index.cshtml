@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4" style="padding: 0.5rem 1rem;">
    <a class="navbar-brand" href="#" style="font-size: 1.2rem;">Movie Search</a>
    <form asp-controller="Movie" asp-action="Index" method="get" class="form-inline my-2 my-lg-0 ml-auto" style="width: 100%; max-width: 600px;">
        <input type="text" name="searchString" class="form-control mr-sm-2" placeholder="Search by name, cinema, or category..." value="@Context.Request.Query["searchString"]" style="font-size: 0.9rem; padding: 0.5rem;" />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="font-size: 0.9rem; padding: 0.5rem 1rem;">Search</button>
    </form>
</nav>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-primary">➕ Add New Movie</a>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                           
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                           
                            
                              <p class="card-text"><b>Name: </b>@item.Name</p>
                            @*
                        <p class="card-text"><b>Category: </b>@item.MovieCategory</p>
                              <p class="card-text"><b>release data </b>@item.ReleaseDate.ToString("dd MMM yy")</p>
                        *@
                           
                        </div>
                    </div>
                    
                     <div class="col-md-12">
                         <div class="card-footer ">
                             <p class="card-text">
                                 <a class="btn btn-outline-primary float-right" asp-action="showdetails" asp-route-id="@item.Id">
                                     <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                               
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>