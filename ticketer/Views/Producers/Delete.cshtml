@model Producer

@{
    ViewData["Title"] = "Delete producer";
}
<link rel="stylesheet" href="~/css/edit.css" />
<div class="page-wrapper">
    <div class="edit">
        <h1 class="hover-zoom">Delete confirmation for @Model.FullName</h1>
        <div class="form-group">
            <img class="zoom-img" id="ProfilePicturePreview" />
        </div>
        <div class="form-group hover-zoom">
            <label asp-for="ProfilePictureURL"></label>
            <input asp-for="ProfilePictureURL" readonly />
            <span asp-validation-for="ProfilePictureURL"></span>
        </div>
        <div class="form-group hover-zoom">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" readonly />
            <span asp-validation-for="FullName"></span>
        </div>
        <div class="form-group hover-zoom">
            <label asp-for="Bio"></label>
            <input asp-for="Bio" readonly />
            <span asp-validation-for="Bio"></span>
        </div>

        <div class="form-group buttons">
            <a class="move-btn" asp-action="Index">back</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="sub move-btn" />
            </form>

        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
    <script src="~/js/main.js"></script>
}